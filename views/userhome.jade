doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='http://www.w3schools.com/lib/w3.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/myblog.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='javascripts/this_is_a_ball.js')
    script(src='javascripts/dp.js')
    style.
      .tagBall{
      width: 400px;
      height: 650px;
      position: relative;
      }
      .tag{
      display: block;
      position: absolute;
      font-size: 15px;
      font-family: "Arial";
      font-weight: bold;
      }
      .tag:hover{
      border:1px solid #666;
      }
      .divTag{
      display: none;
      }
  body
    // nav Bar
    .w3-top
      ul.w3-navbar.w3-black.w3-large
        li
           &nbsp  
        li
          img(src='images/#{username}.jpg',style='height:40px')
        li
          a(href='/userhome') Home
        li
          a(href='/My_Blog') My Blog
        li
          a(href='/search') Search
        li
          a(href='/about') About Us
        li.w3-right
          img(src='images/blog_me.png',style='height:40px')
    br
    
    // profile card
    #header
      .container
        .jumbotron
          center
            img.pfimg.img-circle(src='images/#{username}.jpg',style='height:220px')
            br
            h1 #{username}
            p Followers: 16 &nbsp  &nbsp  &nbsp  &nbsp   Following: 32
            -if(bloglist == null)
              p
                | Blogs: 0 &nbsp 
            -else
              p
                | Blogs: #{bloglist.length} &nbsp 
            a.button.w3-btn.w3-right.w3-small.w3-round-XXlarge(href='/logout') Log Out
      br
      // side Bars
      .w3-col.m4.l3
        // side Nav
        ul.w3-ul.w3-card-4(style='width:98%')
          li
            a.tablink(href='#', onclick="openDiv(event, 'News')") News
          li
            a.tablink(href='#', onclick="openDiv(event, 'Updates')")
              | Updates
              span.w3-badge.w3-right 9
          li
            a.tablink(href='#', onclick="openDiv(event, 'Comments')")
              | Notifications
              span.w3-badge.w3-right 3
          li
            a.tablink(href='#', onclick="openDiv(event, 'Recommendations')") Recommendations
        //
          <nav class="w3-sidenav w3-light-grey w3-card-2" style="width:130px">
          <a href="#" class="tablink" onclick="openDiv(event, 'News')">News</a>
          <a href="#" class="tablink" onclick="openDiv(event, 'Updates')">Updates</a>
          <a href="#" class="tablink" onclick="openDiv(event, 'Comments')">Comments</a>
          <a href="#" class="tablink" onclick="openDiv(event, 'Recommendations')">Recommendations</a>
          </nav>
        br
        // side Types
        .tagBall.w3-card-4(style='width:98%')
          center
            <br>
            <br>

          
            a.tag(target='_blank', href='#') Food
            a.tag(target='_blank', href='#') Anime
            a.tag(target='_blank', href='#') News
            a.tag(target='_blank', href='#') Sports
            a.tag(target='_blank', href='#') Health
            a.tag(target='_blank', href='#') photograph
            a.tag(target='_blank', href='#') Travelling
            a.tag(target='_blank', href='#') Fashion
            a.tag(target='_blank', href='#') Weather
            a.tag(target='_blank', href='#') Science
            a.tag(target='_blank', href='#') Technologies
            a.tag(target='_blank', href='#') Engineering
            a.tag(target='_blank', href='#') Maths
            a.tag(target='_blank', href='#') Gossips
            a.tag(target='_blank', href='#') Movies

      // display Board
      // News
      #News.divTag.w3-col.m8.l9
        br
        .w3-content(style='max-width:800px;position:relative')
          .w3-display-container.newsSlides
            img(src='images/1.jpg', style='width:100%')
            .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
              | RE Zero: Starting Life In Another World
          .w3-display-container.newsSlides
            img(src='images/2.png', style='width:100%')
            .w3-display-bottomright.w3-large.w3-container.w3-padding-16.w3-black
              | Food Wars!: Shokugeki no Soma
          a.w3-btn-floating.w3-hover-dark-grey(style='position:absolute; top:45%; left:0', onclick='dp_news(-1)') ❮
          a.w3-btn-floating.w3-hover-dark-grey(style='position:absolute; top:45%; right:0', onclick='dp_news(1)') ❯
      // Updates
      #Updates.divTag.w3-col.m8.l9
        //
          .w3-card-4
            img.w3-left.w3-margin-right(src='images/friend1.png', style='width:60px')
            h3 $5 Dinners
            .w3-container
              p
              hr
              img.w3-left.w3-margin-right(src='images/$5 Dinners.jpg')
              p
                | The title of this blog says it all — and what could be better? $5 Dinners brings you recipes and weekly meal plans for making dinners that cost $5 or less. Blogger Erin Chase doesn’t stop at dinner, however. She shares great breakfast recipes, like Blueberry Lemon Pancakes and Berry Quinoa Parfaits, and healthy desserts, like Black Bean Brownies With Shredded Coconut And Chocolate Chips. Chase also offers cooking tutorials that explain techniques like how to shred cabbage, and how to choose and cut and avocado, making her blog great for new cooks.
              hr
            button.w3-btn.w3-dark-grey  Like 
            button.w3-btn.w3-dark-grey  Share 
        -if (bloglist == null)
          p No blogs...
        -else
          each blog, i in bloglist
            br
            .w3-card-8.w3-white(style='width:90%')
              .w3-container
                h3
                  a(href='/others_blog?user2=#{blog.user}') #{blog.user}: 
                  | &nbsp#{blog.title}
                hr
                p
                  | #{blog.content}
                  br
                  br
                  br
                .w3-section
                  a.button.w3-btn.w3-medium.w3-dark-grey(href='/like?like_blog=#{blog._id}') Like &nbsp #{blog.like.length}
                  button.w3-btn.w3-medium.w3-dark-grey Share &nbsp #{blog.share} 
            
      // Comments
      #Comments.divTag.w3-col.m8.l9
      // Recommendations
      #Recommendations.divTag.w3-col.m8.l9
      script.
        ball_rotate();
        function openDiv(evt, divName) {
        var i, x, tablinks;
        x = document.getElementsByClassName("divTag");
        for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablink");
        for (i = 0; i < x.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
        }
        if(divName == 'News') {dp_news(0);}
        document.getElementById(divName).style.display = "block";
        evt.currentTarget.className += " w3-red";
        }
